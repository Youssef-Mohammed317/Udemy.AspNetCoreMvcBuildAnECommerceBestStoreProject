@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="max-width: 600px; margin: 80px auto;">
    <div class="card shadow-sm" style="border: 1px solid #dee2e6; border-radius: 8px;">
        <div class="card-body p-5">
            <!-- Header -->
            <div class="text-center mb-4">
                <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #28a745, #20c997); border-radius: 12px; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 15px;">
                    <i class="bi bi-person-plus" style="font-size: 28px; color: white;"></i>
                </div>
                <h2 style="font-weight: 600; color: #333; margin-bottom: 5px;">Create Account</h2>
                <p style="color: #6c757d; font-size: 14px;">Join Best Store today</p>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center mb-4"
                 style="padding: 12px; border-radius: 6px; border: none; font-size: 14px;">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>Please fix the errors below</div>
            </div>

            <!-- Registration Form -->
            <form method="post" asp-action="Register" asp-controller="Account">

                <div class="row g-4">
                    <!-- First Name -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-person me-1"></i> First Name *
                        </label>
                        <input asp-for="FirstName" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-person me-1"></i> Last Name *
                        </label>
                        <input asp-for="LastName" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-12">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-envelope me-1"></i> Email Address *
                        </label>
                        <input asp-for="Email" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-telephone me-1"></i> Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Optional phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-house-door me-1"></i> Address *
                        </label>
                        <input asp-for="Address" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Enter your address" />
                        <span asp-validation-for="Address" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Password -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-lock me-1"></i> Password *
                        </label>
                        <input asp-for="Password" type="password" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Create password" />
                        <span asp-validation-for="Password" class="text-danger" style="font-size: 12px;"></span>
                        <div class="form-text" style="font-size: 12px; margin-top: 4px;">
                            Must be at least 6 characters
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="col-md-6">
                        <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                            <i class="bi bi-lock-fill me-1"></i> Confirm Password *
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control"
                               style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                               placeholder="Confirm password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Terms & Conditions -->
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   asp-for="AcceptTerms"
                                   style="width: 16px; height: 16px; border: 2px solid #ced4da;" />
                            <label class="form-check-label" asp-for="AcceptTerms"
                                   style="font-size: 14px; color: #495057;">
                                I agree to the
                                <a asp-controller="Home" asp-action="Terms"
                                   style="color: #0d6efd; text-decoration: none;">Terms & Conditions</a>
                                and
                                <a asp-controller="Home" asp-action="Privacy"
                                   style="color: #0d6efd; text-decoration: none;">Privacy Policy</a>
                            </label>
                        </div>
                        <span asp-validation-for="AcceptTerms" class="text-danger" style="font-size: 12px;"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-12 mt-2">
                        <button type="submit" class="btn w-100"
                                style="background: linear-gradient(135deg, #28a745, #20c997); color: white; padding: 12px; border: none; border-radius: 6px; font-weight: 500; font-size: 15px; transition: all 0.2s;">
                            <i class="bi bi-person-plus me-2"></i> Create Account
                        </button>
                    </div>

                    <!-- Divider -->
                    <div class="col-12" style="margin: 20px 0;">
                        <div style="display: flex; align-items: center;">
                            <div style="flex: 1; height: 1px; background-color: #e9ecef;"></div>
                            <div style="padding: 0 15px; color: #6c757d; font-size: 13px;">Already have an account?</div>
                            <div style="flex: 1; height: 1px; background-color: #e9ecef;"></div>
                        </div>
                    </div>

                    <!-- Login Link -->
                    <div class="col-12">
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-outline-secondary w-100"
                           style="padding: 10px; border: 1px solid #dee2e6; border-radius: 6px; font-size: 14px;">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Sign In to Existing Account
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index"
           style="color: #6c757d; text-decoration: none; font-size: 14px;">
            <i class="bi bi-arrow-left me-1"></i> Back to Home
        </a>
    </div>
</div>


<style>
    /* Basic form control focus styling */
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.15);
        outline: none;
    }

    /* Button hover effect */
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    /* Card hover effect */
    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    /* Link hover effect */
    a:hover {
        color: #28a745;
        text-decoration: underline;
    }

    /* Form text styling */
    .form-text {
        color: #6c757d !important;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .container {
            margin: 40px 20px;
        }

        .card-body {
            padding: 30px !important;
        }

        .col-md-6 {
            margin-bottom: 15px;
        }
    }
</style>