@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container" style="max-width: 450px; margin: 100px auto;">
    <div class="card shadow-sm" style="border: 1px solid #dee2e6; border-radius: 8px;">
        <div class="card-body p-5">
            <!-- Logo/Header -->
            <div class="text-center mb-4">
                <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #0d6efd, #6ea8fe); border-radius: 12px; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 15px;">
                    <i class="bi bi-box-seam" style="font-size: 28px; color: white;"></i>
                </div>
                <h2 style="font-weight: 600; color: #333; margin-bottom: 5px;">Welcome Back</h2>
                <p style="color: #6c757d; font-size: 14px;">Sign in to your account</p>
            </div>

            <!-- Login Form -->
            <form method="post">
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div style="margin-bottom: 20px;">
                    <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                        <i class="bi bi-envelope me-1"></i> Email Address
                    </label>
                    <input asp-for="Email" class="form-control"
                           style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger" style="font-size: 12px;"></span>
                </div>

                <!-- Password -->
                <div style="margin-bottom: 20px;">
                    <label class="form-label" style="font-weight: 500; font-size: 14px; color: #495057; margin-bottom: 6px;">
                        <i class="bi bi-lock me-1"></i> Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control"
                           style="padding: 12px; border: 1px solid #ced4da; border-radius: 6px; font-size: 14px;"
                           placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger" style="font-size: 12px;"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"
                           style="width: 16px; height: 16px; border: 2px solid #ced4da;" />
                    <label class="form-check-label" style="font-size: 14px; color: #495057;">
                        Keep me signed in
                    </label>
                </div>

                <!-- Login Button -->
                <div style="margin-bottom: 20px;">
                    <button type="submit" class="btn w-100"
                            style="background: linear-gradient(135deg, #0d6efd, #6ea8fe); color: white; padding: 12px; border: none; border-radius: 6px; font-weight: 500; font-size: 15px; transition: all 0.2s;">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                    </button>
                </div>

                <!-- Forgot Password -->
                <div class="text-center mb-4">
                    <a asp-controller="Account" asp-action="ForgotPassword"
                       style="color: #6c757d; text-decoration: none; font-size: 14px;">
                        <i class="bi bi-question-circle me-1"></i> Forgot your password?
                    </a>
                </div>

                <!-- Divider -->
                <div style="display: flex; align-items: center; margin: 25px 0;">
                    <div style="flex: 1; height: 1px; background-color: #e9ecef;"></div>
                    <div style="padding: 0 15px; color: #6c757d; font-size: 13px;">Or</div>
                    <div style="flex: 1; height: 1px; background-color: #e9ecef;"></div>
                </div>

                <!-- Register Link -->
                <div class="text-center">
                    <p style="color: #6c757d; font-size: 14px; margin-bottom: 8px;">
                        Don't have an account?
                    </p>
                    <a asp-controller="Account" asp-action="Register"
                       class="btn btn-outline-secondary w-100"
                       style="padding: 10px; border: 1px solid #dee2e6; border-radius: 6px; font-size: 14px;">
                        <i class="bi bi-person-plus me-1"></i> Create New Account
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index"
           style="color: #6c757d; text-decoration: none; font-size: 14px;">
            <i class="bi bi-arrow-left me-1"></i> Back to Home
        </a>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<style>
    /* Basic form control focus styling */
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
        outline: none;
    }

    /* Button hover effect */
    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    /* Card hover effect */
    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    /* Link hover effect */
    a:hover {
        color: #0d6efd;
        text-decoration: underline;
    }

    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .container {
            margin: 40px 20px;
        }

        .card-body {
            padding: 30px !important;
        }
    }
</style>