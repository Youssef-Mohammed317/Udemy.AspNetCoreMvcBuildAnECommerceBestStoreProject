@model UpdateProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
           
            <!-- Header -->
            <div class="text-center mb-5">
                <div class="mb-3">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                </div>
                <h1 class="fw-bold text-primary">My Profile</h1>
                <p class="text-muted">Manage your personal information and account details</p>
            </div>
            <!-- Email Not Verified Warning -->
            @if (!Model.EmailConfirmed)
            {
                <div class="alert alert-warning alert-dismissible fade show rounded-3 mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Email Not Verified</h6>
                            <p class="mb-2">Your email address is not verified. Please confirm your email to access all features.</p>
                            <div class="mt-2">
                                <form asp-action="SendEmailVerfication" asp-controller="Account" method="post" class="d-inline me-2">
                                    <input type="hidden" name="userId" value="@Model.UserId" />
                                    <input type="hidden" name="isProfilePage" value="true" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-envelope-check me-1"></i> Send Verification Email
                                    </button>
                                </form>
                                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#whyVerifyModal">
                                    <i class="bi bi-question-circle me-1"></i> Why Verify?
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Profile Form -->
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Profile" asp-controller="Account" method="post">
                        <input asp-for="UserId" type="hidden"/>
                        <div class="row g-4">
                            <!-- First Name -->
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-medium">
                                    <i class="bi bi-person me-1"></i> First Name
                                </label>
                                <input asp-for="FirstName" class="form-control form-control-lg rounded-2"
                                       placeholder="Enter your first name">
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-medium">
                                    <i class="bi bi-person me-1"></i> Last Name
                                </label>
                                <input asp-for="LastName" class="form-control form-control-lg rounded-2"
                                       placeholder="Enter your last name">
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <!-- Email with Verification Status -->
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <label asp-for="Email" class="form-label fw-medium">
                                        <i class="bi bi-envelope me-1"></i> Email Address
                                    </label>
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i> Verified
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-circle me-1"></i> Not Verified
                                        </span>
                                    }
                                </div>
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control form-control-lg rounded-2"
                                           placeholder="Enter your email" type="email">
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                                @if (!Model.EmailConfirmed)
                                {
                                    <div class="form-text text-warning">
                                        <i class="bi bi-info-circle me-1"></i> 
                                        Changing email will require re-verification
                                    </div>
                                }
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-medium">
                                    <i class="bi bi-telephone me-1"></i> Phone Number
                                </label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg rounded-2"
                                       placeholder="Enter your phone number">
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <!-- Address -->
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-medium">
                                    <i class="bi bi-house-door me-1"></i> Address
                                </label>
                                <input asp-for="Address" class="form-control form-control-lg rounded-2"
                                       placeholder="Enter your address">
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-5 pt-3 border-top">
                            <div class="mb-3 mb-md-0">
                                <a asp-controller="Home" asp-action="Index"
                                   class="btn btn-outline-secondary px-4 py-2 rounded-2 fw-medium">
                                    <i class="bi bi-arrow-left me-2"></i> Back to Home
                                </a>
                            </div>
                            <div class="d-flex gap-3">
                                @if (!Model.EmailConfirmed)
                                {
                                    <!-- Hidden Verify Email Button -->
                                    <form asp-action="SendEmailVerfication" asp-controller="Account" method="post" class="d-none" style="display:none">
                                        
                                        <input type="hidden" name="userId" value="@Model.UserId" />
                                        <input type="hidden" name="isProfilePage" value="true" />
                                        <button type="submit" id="verifyEmailBtn" class="d-none"></button>
                                    </form>
                                    
                                    <!-- Visible Verify Email Button -->
                                    <button type="button" class="btn btn-success px-4 py-2 rounded-2 fw-medium"
                                            onclick="document.getElementById('verifyEmailBtn').click()">
                                        <i class="bi bi-envelope-check me-2"></i> Verify Email
                                    </button>
                                }
                                <a asp-action="Profile" asp-controller="Account" class="btn btn-outline-primary px-4 py-2 rounded-2 fw-medium">
                                    <i class="bi bi-arrow-clockwise me-2"></i> Reset
                                </a>
                                <button type="submit" class="btn btn-primary px-4 py-2 rounded-2 fw-medium">
                                    <i class="bi bi-check-circle me-2"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Options -->
            <div class="row mt-4">
                <!-- Change Password Card -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm rounded-3 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-2 me-3">
                                    <i class="bi bi-key fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="card-title fw-bold mb-0">Security</h5>
                                </div>
                            </div>
                            <p class="card-text text-muted mb-4">
                                Update your password to keep your account secure
                            </p>
                            <a asp-controller="Account" asp-action="ChangePassword"
                               class="btn btn-outline-primary w-100 rounded-2 fw-medium">
                                <i class="bi bi-shield-lock me-2"></i> Change Password
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Account Info Card -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm rounded-3 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-info bg-opacity-10 p-3 rounded-2 me-3">
                                    <i class="bi bi-info-circle fs-4 text-info"></i>
                                </div>
                                <div>
                                    <h5 class="card-title fw-bold mb-0">Account Information</h5>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">Member Since</small>
                                <span class="fw-medium">@(Model.CreatedAt?.ToString("MMMM dd, yyyy") ?? "")</span>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">Email Status</small>
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i> Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-exclamation-circle me-1"></i> Not Verified
                                    </span>
                                }
                            </div>
                            <div class="mb-4">
                                <small class="text-muted d-block">Account Type</small>
                                <span class="badge bg-primary">@(User.IsInRole("Admin") ? "Administrator" : "Customer")</span>
                            </div>
                            
                            @if (!Model.EmailConfirmed)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <form asp-action="SendEmailVerfication" asp-controller="Account" method="post">
                                        <input type="hidden" name="userId" value="@Model.UserId" />
                                        <input type="hidden" name="isProfilePage" value="true" />
                                        <button type="submit" class="btn btn-success w-100 btn-sm rounded-2">
                                            <i class="bi bi-envelope-arrow-up me-1"></i> Send Verification Email
                                        </button>
                                    </form>
                                    <small class="text-muted d-block mt-2 text-center">
                                        Verify to access all features
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Why Verify Modal -->
<div class="modal fade" id="whyVerifyModal" tabindex="-1" aria-labelledby="whyVerifyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="whyVerifyModalLabel">
                    <i class="bi bi-shield-check text-primary me-2"></i> Why Verify Your Email?
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Account Security:</strong> Protects your account from unauthorized access
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Password Recovery:</strong> Required if you forget your password
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Order Notifications:</strong> Get order confirmations and updates
                    </li>
                    <li>
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Full Access:</strong> Unlock all features of your account
                    </li>
                </ul>
                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle me-2"></i>
                    <small>Verification only takes a minute. Click the link in the email we send you.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form asp-action="SendEmailVerfication" asp-controller="Account" method="post">
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    <input type="hidden" name="isProfilePage" value="true" />
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-envelope-check me-2"></i> Send Verification Email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styling */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
    }

    .form-control {
        border: 1px solid #dee2e6;
        padding: 0.75rem 1rem;
        transition: all 0.2s ease;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }

    .form-label {
        font-size: 0.9rem;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.25);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        transition: all 0.2s ease;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.25);
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.25);
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }

    .bi-person-circle {
        background: linear-gradient(135deg, #0d6efd, #6ea8fe);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Alert styling */
    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffecb5;
        color: #664d03;
    }

    /* Email input group */
    .input-group .btn-outline-success:hover {
        background-color: #28a745;
        color: white;
    }

    /* Modal styling */
    .modal-content {
        border: none;
        border-radius: 12px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .card-body {
            padding: 1.5rem !important;
        }

        .display-1 {
            font-size: 3.5rem;
        }
        
        .d-flex.gap-3 {
            flex-direction: column;
            gap: 10px !important;
        }
        
        .d-flex.gap-3 button {
            width: 100%;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Initialize Bootstrap tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}