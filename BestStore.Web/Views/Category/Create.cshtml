@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-primary shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Create New Category
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Category" asp-action="Create" method="post">

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-primary">
                                <i class="bi bi-tag me-1"></i>Category Name
                            </label>
                            <input asp-for="Name"
                                   class="form-control form-control-lg border-primary"
                                   placeholder="Enter category name"
                                   autofocus>
                            <span asp-validation-for="Name" class="text-danger fw-semibold"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <a asp-controller="Category" asp-action="Index"
                               class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success flex-fill">
                                <i class="bi bi-check-circle me-1"></i>Create
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Categories help organize your products in the store.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .card {
            border-radius: 10px;
            border-width: 2px;
        }

        .card-header {
            border-radius: 8px 8px 0 0 !important;
        }

        .form-control-lg {
            padding: 12px;
            font-size: 1.1rem;
        }

        .form-control:focus {
            border-color: #6c63ff;
            box-shadow: 0 0 0 0.25rem rgba(108, 99, 255, 0.25);
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            border: none;
            transition: all 0.3s;
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #218838, #1e9e8a);
                transform: translateY(-2px);
            }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
    </style>
}