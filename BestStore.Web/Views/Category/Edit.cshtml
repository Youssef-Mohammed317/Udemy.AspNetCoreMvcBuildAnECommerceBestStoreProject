@model UpdateCategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Category
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Category" asp-action="Edit" method="post">

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-warning">
                                <i class="bi bi-tag me-1"></i>Category Name
                            </label>
                            <input asp-for="Name"
                                   class="form-control form-control-lg border-warning"
                                   placeholder="Enter category name"
                                   autofocus>
                            <span asp-validation-for="Name" class="text-danger fw-semibold"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <a asp-controller="Category" asp-action="Index"
                               class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning flex-fill text-white">
                                <i class="bi bi-check-circle me-1"></i>Update
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Update the category name and save changes.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .card {
            border-radius: 10px;
            border-width: 2px;
        }

        .card-header {
            border-radius: 8px 8px 0 0 !important;
        }

        .form-control-lg {
            padding: 12px;
            font-size: 1.1rem;
        }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #ff9800);
            border: none;
            transition: all 0.3s;
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #e0a800, #e68900);
                transform: translateY(-2px);
            }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
    </style>
}